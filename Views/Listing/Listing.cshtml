@{
	
}
@model Listing
<head>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="Listing.css">
</head>
<html>
	<body>
		<div class="container">
			<table>
				<tr>
					<td>
						<h4>
							@Model.Name
						</h4>
					</td>
				</tr>
				<tr>
					<td>
						<img src="data: image; base64, @System.Convert.ToBase64String(Model.Picture)" style="max-height:300px; max-width:300px; height:auto; width:auto;" alt="..."/>
					</td>
				</tr>
				@if (@Model.Grade != 0) {
					<tr>
						<td>
							<h4>
								<b>Grade:</b>
								@Model.Grade
							</h4>
						</td>
					</tr>
				}
				
				<tr>
					<td>
						<div>
							<b>Description</b><br/>
							@Model.Description
						</div>
					</td>
				</tr>
				
			</table>
			<div>
				<b>Price:</b>
				$@Model.Price
			</div>
			<form asp-controller="Account" asp-action="AddToCart">
			<input type="hidden" asp-for="ListingID" value="@Model.ListingID">
			<input type="hidden" asp-for="CustomerID" value="@Model.CustomerID">
			<input type="hidden" asp-for="Name" value="@Model.Name">
			<input type="hidden" asp-for="Description" value="@Model.Description">
			<input type="hidden" asp-for="Price" value="@Model.Price">
			<input type="hidden" asp-for="Grade" value="@Model.Grade">
			<input type = "submit" class="btn btn-primary" value="Add to Cart"/>
			</form>
		</div>
	</body>
</html>
