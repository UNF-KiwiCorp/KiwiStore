@using System;
@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Listing>;
<head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <style>
        body {
            margin-bottom: 60px;
            background-color: #D1FFBD;
        }

        </style>
</head>
<html>
    <div class="text-center">
        <h1>Your Recomendations:</h1>
        <body class="text-start">
        
                @{
                    int i = 0;
                    foreach(Listing item in Model) {
                        i++;
                        <div class="card" style="width: 18rem;">
                            <img src="data: image; base64, @System.Convert.ToBase64String(item.Picture)" class="card-img-top" alt="..."/>
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">$@item.Description</p>
                                <a href="@Url.Action("Listing", "Listing", new { ListingID = item.ListingID })" class="btn btn-primary">$@item.Price</a>
                            </div>
                        </div>
                        if(i > 2) {
                            <br/>
                        }
                    }
                }
        
        </body>
    </div>
<div class="form-group">
    <a asp-controller="Account" asp-action="Cart" class="btn btn-danger text-white">Go to Cart</a>
</div>
</html>

